	<text subtype="manuscript" type="lettera" xml:id="LL1.7">
	<!-- rappresentazione del contenuto testuale -->
		<front /> <!-- non ci sono porzioni di testo che precedono la lettera vera e propria -->

		<body xml:lang="it"> <!-- lettera vera e propria -->
			<pb n="1" />
			<!-- segnalazione dell'inizio della prima pagina -->

			<div n="o_01" type="opener"><!-- oppure elemento opener -->
				<dateline n="ab_01"><!-- riga che registra luogo e data di invio-->
					<s n="s_01" type="sentence">
						<lb n="1" /> <!-- segnalazione dell'inizio di una riga (dato facoltativo, può servire per edizioni particolarmente complesse) -->
						<hi rend="align(right)"><!-- segnalazione dell'allineamento a destra, come spesso accade per la prima riga di una lettera -->
							<placeName ref="#riferimentoAllaListaLuoghi">Luogo</placeName>
							<date when="1830-09-25">25
								<choice><!-- l'elemento choice serve a fornire una doppia lettura, in questo caso tra -->
									<abbr>Nov<am>:</am><hi rend="sup">e</hi></abbr><!-- lezione abbreviata, come da fonte -->
									<expan>Nov<ex>embr</ex>e</expan><!-- lezione con abbreviazione sciolta, per una più agevole lettura -->
								</choice>
							</date>
						</hi>
					</s>
				</dateline>
			</div>

			<div n="t_01" type="letter-body">
			<!-- sezione con corpo della lettera -->
				<salute n="ab_02"><!-- saluto del destinatario -->
					<s n="s_02" type="sentence">
						<lb n="2"/><!-- segnalazione inizio seconda riga -->
						Mio caro
						<rs ref="#riferimentoAllaListaPersone" type="person">amico</rs>
						<!-- in questo caso si usa il tag rs e non name o persName, perché nel testo non è riportato esplicitamente il nome dell'amico;
						 il tag rs offre la possibilità di assegnare comunque un'identità alle persone citate implicitamente -->
					</s>
				</salute>
				<space quantity="2" unit="line" /> <!-- prossemica -->
				<ab n="ab_03" rend="first_line_indented" type="parag">
				<!-- modo alternativo per codificare i paragrafi -->
					<s n="s_03" type="sentence">
						<lb n="3" />
						Son sicuro che mi sgridereste
						<lb n="4" />
						se non vi raccomandassi la mia amica
						<choice>
							<abbr>Mad<am>:</am><hi rend="sup">a</hi></abbr>
							<expan>Mad<ex>am</ex>a</expan>
						</choice>
						<lb n="5" />
						<persName ref="#riferimentoAllaListaPersone" rend="underline" >Levis,</persName> la quale si porta in
						<distinct>cotesta</distinct> 
						[...]
					</s>
				</ab>

				<pb break="no" n="2"/>
				<!-- segnalazione (fine della prima e) inizio della seconda pagina -->
				<ab n="ab_03" type="parag">
					[...]
				</ab>
			</div>
			<div n="c_01" type="closer">
			<!-- formula di chiusura tipica del testo epistolare -->
				<salute n="ab_06">
					<lb n="10"/>
					<s n="s_13" type="sentence" rend="align(right)"><!-- allineamento a destra-->
						Il
						<choice>
							<abbr>vro<g ref="g01" rend="sup"/></abbr>
							<expan>v<ex>ost</ex>ro</expan>
						</choice>
						<lb n="11"/>
					</s>
				</salute>
				<signed rend="align(right)">
				<!-- firma dell'autore -->
					<persName ref="#riferimentoAllaListaPersone">Nome</persName>
				</signed>
			</div>
			<pb n="3"/>
			<pb n="4"/>
		</body>

